            //Premium1 += Premium;
            //$('#hdnQuoteNo').val(Proposal);
            $('#hdntxtPayableAmount').val(Premium);
            f2('txtPayableAmount');
            var AddPremium = $('#txtAdditionalPremium').val();
            if (AddPremium > 0) {
                $('#hdntxtAdditionalPremium').val(AddPremium);
                f2('txtAdditionalPremium');
            }
            $('#ClientName').val(InsuredName);
