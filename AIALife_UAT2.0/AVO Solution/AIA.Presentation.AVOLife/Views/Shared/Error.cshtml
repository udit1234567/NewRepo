@model AIA.Life.Models.Common.Error

@{
    ViewBag.Title = "Error";
}
<style>
    .btn-Modal:hover{
            background-color: #708090 !important;
            color: white;
        }
        .btn-Modal {
          background-color: #2F4F4F !important; 
          color: white; 
        }
</style>

@if (Model != null && !string.IsNullOrEmpty(Model.ErrorMessage))
{
    <br /><br /> <br /><br />
    <div style="display: flex; justify-content: center;">
        @*<img src="~/Images/cancel.png" style="max-height: 100px; max-width: 100px;" />*@
        <img src="~/Images/error.png" style="max-height: 100px; max-width: 100px;"/>
        <br />
    </div>
    <br />
    <div style="display: flex; justify-content: center;text-align: center">
        <h2 class="text-danger" style="color:darkslategrey">@Model.ErrorMessage</h2>

    </div>
    <br />
    <div style="display: flex; justify-content: center;text-align: center; color:grey">
        <input type="button" class="btn btn-Modal" id="" value="OK" onclick="gotoQuote()" style="padding-left:20px;padding-right:20px;width:120px" />

    </div>

        }
        else
        {
        <h1 class="text-danger">Error.</h1>
        <h2 class="text-danger">An error occurred while processing your request.</h2>
        }

        <script>
            function gotoQuote() {
                window.location.href = "/Policy/QuotationPool";
            }
        </script>
