<div class="col-md-12 col-sm-12 col-xs-12 col-lg-12 iGrid" id="divProposalSubmittedGrid">
    @Html.Partial("~/Views/Policy/PartialSubmittedProposalsGrid.cshtml", Model)
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $.get("../Policy/SearchSubmittedProposalsDetails", $("").serialize())
               .done(function (data) {
                   $("#divSubmittedProposalGrid").html(data);
               }).
               fail(function () {
                   $("#divSubmittedProposalGrid").html("No Records Found");
               });       
    });
</script>












