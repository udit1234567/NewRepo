    function f1(id) {

        var res = $('#' + id).val();
        if (res == "") {
            res = "0";
        }
        $('#' + id).val(parseInt(res.replace(/,/g, '')).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','));
        $('#hdn' + id).val(res.replace(/,/g, ''));
    }
