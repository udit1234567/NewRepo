@Html.Grid(Model.objSuspectReAllocation).Named("GridSuspectReAllocationDetails").Columns(columns =>
{
    columns.Add(a => a.SuspectReAllocationId).Titled("").Encoded(false).Sanitized(false).SetWidth(1).RenderValueAs(a => Html.RadioButton("SuspectReAllocationId" + a.SuspectReAllocationId, a.SuspectReAllocationId, new { @id = "rdnSuspectReAllocationId" + a.SuspectReAllocationId, @class = "form-control numeric", Style = "height:14px;width:14px" }));
