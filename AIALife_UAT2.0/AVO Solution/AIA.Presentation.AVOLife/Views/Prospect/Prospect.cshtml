@using AIAResources;
@using AIA.Presentation.Helpers;
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userName = HttpContext.Current.User.Identity.Name;
    List<int?> lstPermissions = HelperMethods.GetPermissions(userName);
}
<style>
    .panel-default {
        /*border-color: #eee !important;*/
        margin-bottom: 5px;
    }

    .panel {
        background-color: #B8123E !important;
    }

    .block-content {
        background-color: #46b2b5;
        padding: 2em 1em;
        width: 200px;
        height: 150px;
        color: white;
        padding-top: 15px;
    }

    @@media screen and (min-width: 320px) and (max-width: 768px) {
        .navbar-collapse.collapse {
            display: block !important;
            margin-left: 20px;
        }

        .nav > li {
            display: inline-block;
        }

        .dashboard-stat .details {
            right: 20px;
        }
    }
</style>

<div>

    <div class="btn-group btn-breadcrumb breadcrumb-default">

        <div class="visible-lg-block">
            @*<div class="btn btn-info btn-derecha">Reference Number</div>*@
        </div>
        <a href="/Home/AgentHome" class="btn visible-lg-block visible-md-block"><img src="/Content/Images/home-white.png" class="pull-left" style="height:25px;margin-right:10px;background-color: #B8123E;"></a>
       
        <div class="btn btn-info"><b>@Resources.GetLabelName("Prospect")</b></div>
    </div>
</div>




<br />

<div id="navContainer">
    <div class="collapse navbar-collapse Main-collapse" id="navbar-collapse-1">
        <div class="navbar-nav list" id="divNav">
            <ul class="nav navbar-nav">



                <li class="dropdown liClass" style="display:none">
                    <a href="#" class="dropdown-toggle dashboard-stat dashboard-stat-light purple-soft"
                       data-toggle="dropdown" style="margin-right: 20px;" onclick="showProspectReAllocate()">
                        <div class="visual">
                            <i class="icon-share-alt">
                            </i>
                        </div>
                        <div class="details col-sm-12">
                            <div class="desc  col-sm-12" style="text-align:center;padding-left:25%;"><b>Allocate Prospect</b></div>
                            @*<div class="number col-sm-4" style="padding-top: 0px">1</div>*@
                        </div>
                        <div class="col-sm-12">
                            <img src="~/Images/Up-Arrow.png" style="height:20px;margin-left:38px;">
                            <i class=""></i>
                        </div>
                    </a>

                </li>
                @if (lstPermissions.Contains(21))
                {
                    <li class="dropdown liClass">
                        <a href="#" class="dropdown-toggle dashboard-stat dashboard-stat-light green-soft"
                           data-toggle="dropdown" style="margin-right: 20px;" onclick="showPropectPool()">
                            
                                <img src="~/Content/Images/Confirmed Prospect1.png" />
                           
                                <p><b>@Resources.GetLabelName("Confirmed Prospect")</b></p>
                                @*<div class="number col-sm-4" style="padding-top: 0px">1</div>*@
                            
                            <div class="col-sm-12 count-of-created">
                                @ViewBag.ProspectPoolCount
                            </div>
                        </a>
                    </li>
                }

                @*<li class="dropdown liClass" style="width:203px;">
                    <a href="#" class="dropdown-toggle dashboard-stat dashboard-stat-light red-soft"
                       data-toggle="dropdown" data-hover="dropdown" style="margin-right: 20px;" onclick="showConfirmedProspect()">
                        <div class="visual">
                            <i class="icon-share-alt">
                            </i>
                        </div>
                        <div class="details col-sm-12">
                            <div class="desc  col-sm-12" style="text-align: center;padding-left:25%;"><b>@Resources.GetLabelName("Confirmed Prospect")</b></div>
                            @*<div class="number col-sm-4" style="padding-top: 0px">1</div>*@
                @*</div>
                            <div class="col-sm-12">
                                <img src="~/Images/Up-Arrow.png" style="height:20px;margin-left:25%">
                                <i class=""></i>
                            </div>
                        </a>
                    </li>*@
                @if (lstPermissions.Contains(22))
                {
                    <li class="dropdown liClass">
                        <a href="#" class="dropdown-toggle dashboard-stat dashboard-stat-light blue-soft"
                           data-toggle="dropdown" data-hover="dropdown" style="margin-right: 20px;" onclick="showNeedAnalysisCompleted()">
                          
                                <img src="~/Content/Images/Need Analysis Completed1.png" />
                                                     
                                <p><b>@Resources.GetLabelName("Need Analysis Completed")</b></p>
                                @*<div class="number col-sm-4" style="padding-top: 0px">1</div>*@
                           
                            <div class="col-sm-12 count-of-created">
                                @ViewBag.NeedAnalysisCount
                            </div>
                        </a>
                    </li>
                }


            </ul>

        </div>
    </div>
</div>

<script>

    function showPropectPool() {
        window.location.href = "/Prospect/ProspectPool";
    };

    //function showConfirmedProspect() {
    //    window.location.href = "/Prospect/ConfirmedProspect";
    //};

    function showNeedAnalysisCompleted() {
        window.location.href = "/Prospect/NeedAnalysisCompleted";
    };

    function showProspectReAllocate() {
        window.location.href = "/Prospect/ProspectReallocate";
    };

    
</script>