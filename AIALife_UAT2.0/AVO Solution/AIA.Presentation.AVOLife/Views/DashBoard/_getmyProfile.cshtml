@model AIA.Life.Models.DashBoard.myProfile
@using AIA.Presentation.Helpers;
@using GridMvc.Html
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    td {
        padding-top: 10px;
        padding-bottom: 10px;
        width: 10%;
    }
    #dtWeddingAnniversary {
        padding-left: 90px;
    }
    .text{
        width:140px;
    }
