@model AIA.Life.Models.Policy.Policy

@Styles.Render("~/Content/JSStyles")
@Styles.Render("~/Content/JSLayout")
@Scripts.Render("~/bundles/Scripts")
@Scripts.Render("~/bundles/amcharts")
@Scripts.Render("~/bundles/MvcAjaxScript")
@using (Html.BeginForm("ProccedToPayment", "Policy", FormMethod.Post, new { id = "frmProposalPage" }))
{
    @Html.HiddenFor(a => a.QuoteNo)
    @Html.HiddenFor(a => a.ProposalNo)

    <center>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <img src="~/Content/Images/AIA-loader-4 (1).gif" style="height:200px;" />
            <h2 style="font-weight:900;">We are processing your proposal. Please bear with us it may take a while...</h2>
        </div>

    </center>
}

<script>
    $(document).ready(function () {
        $('#frmProposalPage').submit();
    });
</script>

