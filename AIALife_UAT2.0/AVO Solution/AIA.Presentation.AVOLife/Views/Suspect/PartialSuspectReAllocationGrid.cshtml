    columns.Add(a => a.SuspectReAllocationHome).Titled("Home").Encoded(false).Sanitized(false).SetWidth(20).Filterable(true);

    columns.Add(a => a.SuspectReAllocationWork).Titled("Office no").Encoded(false).Sanitized(false).SetWidth(20).Filterable(true);
    columns.Add(a => a.SuspectReAllocationEmail).Titled("Email").Encoded(false).Sanitized(false).SetWidth(20).Filterable(true);
    columns.Add(a => a.SuspectReAllocationDecision).Titled("Decision").Encoded(false).Sanitized(false).SetWidth(20).Filterable(true);
    columns.Add(a => a.SuspectReAllocationReportee).Titled("Reportee").Encoded(false).Sanitized(false).SetWidth(20).Filterable(true);
