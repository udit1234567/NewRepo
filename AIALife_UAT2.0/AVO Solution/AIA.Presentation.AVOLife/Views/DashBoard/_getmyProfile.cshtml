<div class="panel panel-default">
    <div class="panel-body" style="background-color: orangered;color:white;font-size:large;padding: 10px;" align="center">USER PROFILE</div>
</div>
<table style="width:100%">
    <tr>
        <td></td>
        <td>
            <label class="control-label">Name</label>
        </td>
        <td>
            @Html.TextBoxFor(m => m.fullName, new { @class = "form-control text", @disabled = "disabled" })
        </td>
        <td></td>
        <td>
            <label class="control-label">Mobile</label>
        </td>
        <td>
            @Html.TextBoxFor(m => m.mobileNo, new { @class = "form-control text", @disabled = "disabled" })
        </td>
        <td></td>
        <td>
            <label class="control-label">Work</label>
        </td>
        <td>
            @Html.TextBoxFor(m => m.workPhone, new { @class = "form-control text", @disabled = "disabled" })
        </td>
        <td></td>
    </tr>
    <tr>
        <td></td>
        <td>
            <label class="control-label">Home</label>
        </td>
        <td>
            @Html.TextBoxFor(m => m.homePhone, new { @class = "form-control text", @disabled = "disabled" })
        </td>
        <td></td>
        <td>
            <label class="control-label">Email Id</label>
        </td>
        <td>
            @Html.TextBoxFor(m => m.emailId, new { @class = "form-control text", @disabled = "disabled" })
        </td>
        <td></td>
        <td>
            <label class="control-label">Designation</label>
        </td>
        <td>
            @Html.TextBoxFor(m => m.designation, new { @class = "form-control text", @disabled = "disabled" })
        </td>
        <td></td>
    </tr>
    <tr>
        <td></td>
        <td>
            <label class="control-label">Marital Status</label>
        </td>
        <td>
            @Html.DropDownListFor(a => a.maritalStatus, new SelectList("", "ID", "Value"), "Select", new { @id = "ddlmaritalStatus", @class = "form-control text" })
        </td>
        <td></td>
        <td>
            <label class="control-label">Wedding Anniversary</label>
        </td>
        <td>
            @Html.iNubeDatePickerFor(m => m.weddingAnniversaryDate, new {@id="dtWeddingAnniversary", @class = "form-control text" })
        </td>
        <td></td>
    </tr>
    <tr>
        <td></td>
        <td><label style="text-decoration:underline; font-weight:bold;">Family Details</label></td>
    </tr>
