@model AIA.Life.Models.Opportunity.LifeQuote
@using GridMvc.Html;
@using System.Globalization;


@Html.Grid(Model.objPreviousInsuranceList).Named("PreviousInsuranceList").Columns(columns =>
{
    columns.Add(a => a.NameOfTheComp).Titled("Name Of The Insured Comapany").Encoded(false).Sanitized(false);
    columns.Add(a => a.PolicyNumber).Titled("Policy/Proposal Number").Encoded(false).Sanitized(false).Filterable(true);
    columns.Add(a => a.SumAssured).Titled("Sum Assured (LKR)").Encoded(false).Sanitized(false).Filterable(true);
    columns.Add(a => a.AnnualPremium).Titled("Annual Premium(LKR)").Encoded(false).Sanitized(false).Filterable(true); 
    columns.Add(a => a.Deathbenifit).Titled("Accidental Death Benefit(LKR)").Encoded(false).Sanitized(false).Filterable(true);
    columns.Add(a => a.IllNessBenifit).Titled("Critical Illness Benefit(LKR)").Encoded(false).Sanitized(false).Filterable(true);
    columns.Add(a => a.PermanentDisability).Titled("Total Permanent Disability/Waiver Of Premium(LKR)").Encoded(false).Sanitized(false).Filterable(true);
    columns.Add(a => a.HospitalizationPerDay).Titled("Hospitalization Daily Benefits").Encoded(false).Sanitized(false).Filterable(true);
    columns.Add(a => a.status).Titled("Status").Encoded(false).Sanitized(false).Filterable(true);
}).Selectable(false).WithMultipleFilters()
