@model Grid.Mvc.Ajax.GridExtensions.AjaxGrid<AIA.Life.Models.Opportunity.ProspectPool>
@using GridMvc.Html

@(Html.Grid(Model).Named("GridProspectPoolDetails").Columns(columns =>
{
    columns.Add(a => a.ProspectType).Titled("Type").Encoded(false).Sanitized(false).SetWidth("8%").Filterable(true);
    columns.Add(a => a.LeadNo).Titled("Lead No").Encoded(false).Sanitized(false).SetWidth("10%").Filterable(true);
    columns.Add(a => a.LeadDate).Titled("LeadDate").Encoded(false).Sanitized(false).SetWidth("10%").Filterable(true);
    columns.Add(a => a.FullName).Titled("Proposer Name").Encoded(false).Sanitized(false).SetWidth("10%").Filterable(true);
    //columns.Add(a => a.Salutation).Titled("Salutation").Encoded(false).Sanitized(false).SetWidth("10%").Filterable(true);
    //columns.Add(a => a.ProspectName).Titled("Given Name").Encoded(false).Sanitized(false).SetWidth("10%").Filterable(true);
    //columns.Add(a => a.ProspectLastName).Titled("Surname").Encoded(false).Sanitized(false).SetWidth("10%").Filterable(true);
    columns.Add(a => a.Dob).Titled("DOB").Encoded(false).Sanitized(false).SetWidth("10%").Filterable(true);
    //columns.Add(a => a.ProspectMobile).Titled("Mobile").Encoded(false).Sanitized(false).SetWidth("10%").Filterable(true);
    columns.Add(a => a.Place).Titled("Place").Encoded(false).Sanitized(false).SetWidth("10%").Filterable(true);
    //columns.Add(a => a.ProspectEmail).Titled("Email").Encoded(false).Sanitized(false).SetWidth("15%").Filterable(true);
    //columns.Add(a => a.ProspectNicNo).Titled("NIC").Encoded(false).Sanitized(false).SetWidth("10%").Filterable(true);
    //columns.Add(a => a.ProspectDaysleft).Titled("Days Left").Encoded(false).Sanitized(false).SetWidth("10%").Filterable(true);
    columns.Add(a => a.ProspectId).Titled("Action").Encoded(false).Sanitized(false).SetWidth("10%").RenderValueAs(a => Html.ActionLink("Modify", "LoadProspectInformation", "Prospect", new { ContactID = a.ProspectId }, null));
}).Selectable(false).WithPaging(5).Filterable().WithMultipleFilters())

<link href="~/Content/ladda-bootstrap/ladda-themeless.min.css" rel="stylesheet" />
@Scripts.Render("~/bundles/GridMVC")
<style>
    .panel-default {
        /*border-color: #eee !important;*/
        margin-bottom: 5px;
    }

    .panel {
        background-color: #B8123E !important;
    }

    @@media screen and (min-width:320px) and (max-width:768px) {
        .no-more-tables table, thead, tbody, th, td, tr {
            float: none;
        }
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {       
        $(".grid-mvc").gridmvc().pageGrids;
        if ('@TempData["Load"]' == "FirstTime") {
            $.ajaxSetup({
                cache: false
            });
            pageGrids.GridProspectPoolDetails.ajaxify({
                getData: '../Prospect/SearchNeedAnalysisCompletedPoolDetails',
                getPagedData: '../Prospect/SearchNeedAnalysisCompletedPoolDetails',
            });
        }
    });


</script>











