@Html.Grid(Model.ObjProspectList).Named("GridProspectListDetails").Columns(columns =>
{
    columns.Add(a => a.ProspectListId).Titled("").Encoded(false).Sanitized(false).SetWidth(1).RenderValueAs(a => Html.RadioButton("ProspectListId" + a.ProspectListId, a.ProspectListId, new { @id = "rdnProspectListId" + a.ProspectListId, @class = "form-control numeric", Style = "height:14px;width:14px" }));
    columns.Add(a => a.ProspectListType).Titled("Type").Encoded(false).Sanitized(false).SetWidth(20).Filterable(true);
    columns.Add(a => a.ProspectListName).Titled("Name").Encoded(false).Sanitized(false).SetWidth(20).Filterable(true);
    columns.Add(a => a.ProspectListMobile).Titled("Mobile").Encoded(false).Sanitized(false).SetWidth(20).Filterable(true);
    columns.Add(a => a.ProspectListHome).Titled("Home").Encoded(false).Sanitized(false).SetWidth(20).Filterable(true);
    columns.Add(a => a.ProspectListWork).Titled("Office No").Encoded(false).Sanitized(false).SetWidth(20).Filterable(true);
    columns.Add(a => a.ProspectListEmail).Titled("Email").Encoded(false).Sanitized(false).SetWidth(20).Filterable(true);
    columns.Add(a => a.ProspectListNicNo).Titled("NIC").Encoded(false).Sanitized(false).SetWidth(20).Filterable(true);
}).WithPaging(5).WithMultipleFilters()

