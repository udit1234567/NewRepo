<script>
    function GetProposalInfoChart() {
        var proposal = $("#ddlP").val();
        var range = $("#ddlTD").val();
        var reportId = 1;
        if (proposal == "ANP" && range == "MTD")
            reportId = 1;
        else if (proposal == "NOP" && range == "MTD")
            reportId = 2;
        else if (proposal == "ANP" && range == "YTD")
            reportId = 3;
        else if (proposal == "NOP" && range == "YTD")
            reportId = 4;
        $.ajax({
            type: "GET",
            url: '../Dashboard/DashBoard/PartialBarChart',
            contentType: "application/json; charset=utf-8",
            data: { ReportID: reportId },
            success: function (result) {
                $("#divProposalInfoChart").html("");
                $("#divProposalInfoChart").html(result);
            }
        });
    }
